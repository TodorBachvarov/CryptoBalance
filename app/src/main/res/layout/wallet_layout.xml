<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dip"
        android:orientation="horizontal"
        android:background="#5e5e5e">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:textAlignment="center"
            android:textSize="15dip"
            android:text="@string/wallet_header_currency"
            android:textColor="#a8a8a8"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:textAlignment="center"
            android:textSize="15dip"
            android:text="@string/wallet_header_volume"
            android:textColor="#a8a8a8"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:textAlignment="center"
            android:textSize="15dip"
            android:text="@string/wallet_header_price"
            android:textColor="#a8a8a8"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:textAlignment="center"
            android:textSize="15dip"
            android:text="@string/wallet_header_owned"
            android:textColor="#a8a8a8"/>
    </LinearLayout>

    <ListView
        android:id="@+id/wallet_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:drawSelectorOnTop="false" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

    <TextView android:id="@+id/wallet_total_usd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="40dip"
        android:text="TBD"
        android:background="#228b22"/>

    <TextView android:id="@+id/wallet_total_btc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="40dip"
        android:text="TBD"
        android:background="#FFD700"/>
    </LinearLayout>
</LinearLayout>