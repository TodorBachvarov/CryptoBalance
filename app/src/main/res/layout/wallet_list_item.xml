<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"  android:layout_height="60dip">
    <TextView
        android:id="@+id/currency"
        android:layout_width="100dip" android:layout_height="match_parent"
        android:layout_weight="0.25" android:textAlignment="center" />

    <TextView
        android:id="@+id/value"
        android:layout_width="100dip" android:layout_height="match_parent"
        android:layout_weight="0.25" android:textAlignment="center"/>

    <TextView
        android:id="@+id/wallet_item_dollar_rate"
        android:layout_width="100dip" android:layout_height="match_parent"
        android:layout_weight="0.25" android:textAlignment="center"/>

    <TextView
        android:id="@+id/wallet_item_dollar_value"
        android:layout_width="100dip" android:layout_height="match_parent"
        android:textAlignment="center" android:layout_weight="0.25"/>
</LinearLayout>